# Application
APP_NAME=VERITY
APP_VERSION=1.0.0
ENVIRONMENT=production
DEBUG=False
API_V1_STR=/api/v1

# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/verity_db

# Security
SECRET_KEY=your-secret-key-min-32-characters-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Origins (comma-separated)
BACKEND_CORS_ORIGINS=http://localhost:3000,https://verity.ai

# AI Services
OPENAI_API_KEY=sk-your-openai-key
GEMINI_API_KEY=your-gemini-api-key

# First Admin User
FIRST_SUPERUSER_EMAIL=admin@verity.ai
FIRST_SUPERUSER_PASSWORD=change-this-secure-password
